# Configuración del servidor
PORT=5000
NODE_ENV=development

# Configuración de la base de datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=estudio_contable_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_DIALECT=postgres
DB_RESET=false  # Cambiar a "true" para resetear la base de datos al iniciar (solo en desarrollo)

# Configuración de seguridad
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=1d  # 1d = 1 día, también puedes usar 60m, 2h, etc.

# Configuración de correo (para implementación futura)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=no-reply@estudiocontable.com